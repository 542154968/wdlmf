/**index.wxss**/

.item{
  box-sizing: border-box;
  padding: 0;
  width: 720rpx;
  height: 120rpx;
  background: #fff;
  margin:  15rpx;
  position: relative;
  overflow: hidden;
}
.item-contain{
  position: relative;
  z-index: 2;
  background: #fff;
  overflow: hidden
}
.item .image{
  width: 120rpx;
  height: 120rpx;
  float: left;
}
.item .image image{
  width: 100%;
  height: 100%;
}
.item .list{
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  float: left;
  color: #333;
 
}
.item .list .name{
  font-weight: bold;
  font-size: 16px;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}
.item .list .list-item{
  color: #666;
  font-size: 14px;
  float: left;
  width: 160rpx;
}
.item .list .list-item text{
  color: #eb6120;
}
.item .list .add{
  float: right;
  font-size: 12px;
  width: 120rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 5rpx;
  border-radius: 5rpx;
  background: #2dd382;
  color: #fff;
  cursor: pointer;
  transition: all 0.3s
}
.item .list .add:active{
  box-shadow: 0 0 5rpx #2dd382;
  text-shadow: 0 0 2px #fff;
}
.item .list .add.has{
  background: #eb6120;
}
